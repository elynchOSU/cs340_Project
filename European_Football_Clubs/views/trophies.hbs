

<!-- teams.hbs -->
<h1>Trophies</h1>
<p>View or Add Trophy</p>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{!-- Create a table --}}
<table id="trophy-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            
            <th>Trophy ID</th>
			<th>Trophy Name</th>
			<th>Year</th>
            <th>Winner</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.trophy_id}}>
			<td>{{this.trophy_id}}</td>
            <td>{{this.trophy_name}}</td>
            <td>{{this.trophy_year}}</td>
            <td>{{this.team_name}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{!-- Form to add a record to the table  --}}
<h2>Add a Trophy</h2>
<p>To add a new trophy, please enter the information below and click 'Submit'</p>
<form id="add-trophy-form-ajax">
    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">
    
    <label for="input-year">Year: </label>
    <input type="number" name="input-year" id="input-year">

	<label for="input-team_id">Winner: </label>
    <select name="input-team_id" id="mySelect">
        <option value="test">Select a Team</option>
        {{#each teams}}
        <option value="{{this.team_id}}">{{this.team_name}}</option>
        {{/each}}
    </select>

    <input type="Submit">
</form>

<script src="./js/add_trophy.js"></script>

